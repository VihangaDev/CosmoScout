<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="bestHour"
            type="com.cosmoscout.ui.home.BestHourUiModel" />

        <variable
            name="bestHourLoading"
            type="boolean" />

        <variable
            name="bestHourError"
            type="String" />

        <variable
            name="apod"
            type="com.cosmoscout.ui.home.ApodUiModel" />

        <variable
            name="apodLoading"
            type="boolean" />

        <variable
            name="apodError"
            type="String" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/homeSwipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".ui.home.HomeFragment">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/homeScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="28dp"
            android:paddingBottom="120dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/homeContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_best_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/colorSurface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    app:cardPreventCornerOverlap="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            style="@style/Text.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_best_card_title"
                            android:textColor="@color/colorOnSurface" />

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/bestHourProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:visibility='@{bestHourLoading ? View.VISIBLE : View.GONE}' />

                        <TextView
                            android:id="@+id/text_best_hour_error"
                            style="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text='@{bestHourError}'
                            android:textColor="@color/colorOnSurfaceVariant"
                            android:visibility='@{bestHourError != null ? View.VISIBLE : View.GONE}' />

                        <LinearLayout
                            android:id="@+id/bestHourContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="vertical"
                            android:visibility='@{bestHourLoading ? View.GONE : (bestHourError != null ? View.GONE : View.VISIBLE)}'
                            android:tag='@{bestHour}'>

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/chip_group_best_hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                app:chipSpacingHorizontal="8dp"
                                app:singleLine="true">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/bestStatusPill"
                                    style="@style/Widget.Cosmo.AssistChip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checkable="false"
                                    android:text='@{bestHour != null ? bestHour.statusLabel : @string/home_status_clear}'
                                    tools:text="Clear" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/bestTimeChip"
                                    style="@style/Widget.Cosmo.AssistChip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checkable="false"
                                    android:text='@{bestHour != null ? bestHour.timeRange : @string/home_sample_tonight_window}'
                                    tools:text="8:30–9:30 PM" />
                            </com.google.android.material.chip.ChipGroup>

                            <TextView
                                android:id="@+id/text_conditions"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text='@{bestHour != null ? bestHour.conditions : @string/home_best_loading}'
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/colorOnSurfaceVariant"
                                tools:text="Clear 78% • Moon 22%" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/bestLocationChip"
                                style="@style/Widget.Cosmo.AssistChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:checkable="false"
                                android:text='@{bestHour != null ? bestHour.locationName : @string/home_best_location_current}'
                                tools:text="Current location" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="12dp"
                                app:dividerColor="@color/outline"
                                app:dividerThickness="1dp" />

                            <TextView
                                android:id="@+id/text_best_hour_footer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='@{bestHour != null ? bestHour.footer : @string/home_best_footer_default}'
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/colorOnSurfaceVariant"
                                tools:text="Based on tonight's forecast" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_apod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/colorSurface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="1dp"
                    app:cardPreventCornerOverlap="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            style="@style/Text.TitleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_apod_card_title"
                            android:textColor="@color/colorOnSurface" />

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/apodProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:visibility='@{apodLoading ? View.VISIBLE : View.GONE}' />

                        <TextView
                            android:id="@+id/text_apod_error"
                            style="@style/TextAppearance.Material3.BodyMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text='@{apodError}'
                            android:textColor="@color/colorOnSurfaceVariant"
                            android:visibility='@{apodError != null ? View.VISIBLE : View.GONE}' />

                        <LinearLayout
                            android:id="@+id/apodContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="vertical"
                            android:visibility='@{apodLoading ? View.GONE : (apodError != null ? View.GONE : View.VISIBLE)}'
                            android:tag='@{apod}'>

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/apodImage"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:layout_marginTop="12dp"
                                android:background="@color/image_placeholder"
                                android:contentDescription="@string/home_apod_image_content_description"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Cosmo.Rounded16"
                                app:strokeColor="@color/outline"
                                app:strokeWidth="1dp" />

                            <TextView
                                android:id="@+id/text_apod_source"
                                style="@style/TextAppearance.Material3.BodySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="@string/home_apod_source_label"
                                android:textColor="@color/colorOnSurfaceVariant" />

                            <TextView
                                android:id="@+id/text_apod_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text='@{apod != null ? apod.title : @string/home_apod_card_title}'
                                android:textAppearance="@style/Text.TitleMedium"
                                android:textColor="@color/colorOnSurface"
                                tools:text="NASA APOD" />

                            <TextView
                                android:id="@+id/apodMediaBadge"
                                style="@style/TextAppearance.Material3.BodySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:text='@{apod != null ? apod.mediaLabel : ""}'
                                android:textColor="@color/colorOnSurface"
                                android:visibility='@{apod != null &amp;&amp; !apod.image ? View.VISIBLE : View.GONE}'
                                android:background="@drawable/bg_media_badge"
                                tools:text="Video" />

                            <LinearLayout
                                android:id="@+id/apod_actions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/apodViewButton"
                                    style="@style/Widget.Cosmo.Button.Outlined.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/home_apod_view_cta" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/text_apod_footer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text='@{apod != null ? apod.footer : @string/home_apod_footer_hint}'
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/colorOnSurfaceVariant"
                                tools:text="APOD for 16 Nov 2025" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>
