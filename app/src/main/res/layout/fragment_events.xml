<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="hasEvents"
            type="boolean" />

        <variable
            name="eventsLoading"
            type="boolean" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Space Weather header card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/eventsHeaderCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/screen_horizontal"
                android:layout_marginEnd="@dimen/screen_horizontal"
                android:layout_marginTop="@dimen/section_spacing"
                app:cardBackgroundColor="@color/colorSurface"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp"
                app:strokeColor="@color/outline"
                app:strokeWidth="@dimen/card_stroke_width"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/eventsTitle"
                            style="@style/Text.TitleMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/events_header_title"
                            android:textColor="@color/colorOnSurface" />

                        <TextView
                            android:id="@+id/refreshStatus"
                            style="@style/TextAppearance.Material3.BodySmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/refresh_status_hint"
                            android:textColor="@color/colorOnSurfaceVariant"
                            tools:text="Updated Â· 7:46 PM" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/eventsSubtitle"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/events_header_subtitle"
                        android:textColor="@color/colorOnSurfaceVariant"
                        tools:text="(NASA DONKI)" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/filterGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/filterAll"
                            style="@style/Widget.Cosmo.FilterChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/events_filter_all" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/filterCme"
                            style="@style/Widget.Cosmo.FilterChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/events_filter_cme" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/filterSep"
                            style="@style/Widget.Cosmo.FilterChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/events_filter_sep" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/filterGeo"
                            style="@style/Widget.Cosmo.FilterChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/events_filter_geomagnetic" />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/eventsList"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingHorizontal="@dimen/screen_horizontal"
                android:paddingTop="@dimen/card_spacing_vertical"
                android:paddingBottom="@dimen/list_bottom_padding"
                app:layout_constraintTop_toBottomOf="@id/eventsHeaderCard"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_event" />

            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:visibility='@{hasEvents ? View.GONE : (eventsLoading ? View.GONE : View.VISIBLE)}'
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_auto_awesome_24"
                    app:tint="@color/colorPrimary"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/Text.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/events_empty_title"
                    android:textColor="@color/colorOnSurface" />

                <TextView
                    style="@style/Text.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/events_empty_subtitle"
                    android:textAlignment="center"
                    android:textColor="@color/colorOnSurfaceVariant" />
            </LinearLayout>

            <TextView
                android:id="@+id/errorState"
                style="@style/Text.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/events_error"
                android:textColor="@color/colorOnSurfaceVariant"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/eventsHeaderCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>
